<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ListaustestiServlet</servlet-name>
        <servlet-class>Servlets.ListaustestiServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Pizzapalvelu.Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminIndexServlet</servlet-name>
        <servlet-class>Pizzapalvelu.Servlets.AdminIndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MenuServlet</servlet-name>
        <servlet-class>Pizzapalvelu.Servlets.MenuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PizzaPalveluServlet</servlet-name>
        <servlet-class>Pizzapalvelu.Servlets.PizzaPalveluServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminTaytteetServlet</servlet-name>
        <servlet-class>Pizzapalvelu.Servlets.AdminTaytteetServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListaustestiServlet</servlet-name>
        <url-pattern>/Listaustesti</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/admin/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminIndexServlet</servlet-name>
        <url-pattern>/Admin/index.jsp</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MenuServlet</servlet-name>
        <url-pattern>/Menu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminTaytteetServlet</servlet-name>
        <url-pattern>/admin/taytteet/</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
